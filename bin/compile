#!/usr/bin/env bash

# fail fast
set -eu

indent() {
  sed -u 's/^/       /'
}

# parse args
export BUILD_DIR=$1

BP_DIR="$(cd "$(dirname "$0")" && pwd)"
OPT_DIR=$BP_DIR/../opt/

echo -n "-----> Installing ngrok... "
curl --silent -o ngrok.zip -L "https://api.equinox.io/1/Applications/ap_pJSFC5wQYkAyI0FIVwKYs9h1hW/Updates/Asset/ngrok.zip?os=linux&arch=386&channel=stable" | indent
unzip ngrok.zip -d $BUILD_DIR/bin > /dev/null 2>&1
echo "done"

echo -n "-----> Installing Java debug script..."
mkdir -p $BUILD_DIR/.heroku/jdwp/bin
cp $OPT_DIR/java $BUILD_DIR/.heroku/jdwp/bin/with_jdwp
chmod +x $BUILD_DIR/.heroku/jdwp/bin/with_jdwp
echo " done"

mkdir -p $BUILD_DIR/.profile.d
cat << EOF > $BUILD_DIR/.profile.d/jdwp.sh
export PATH=\$HOME/.heroku/jdwp/bin:\$PATH
EOF
